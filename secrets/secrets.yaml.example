# Example secrets file for sops-nix
# This file shows the structure of a secrets file
# Copy this to secrets.yaml and encrypt it with sops

# System-level secrets (available to nix-darwin)
example-secret: my-secret-value
api-key: your-api-key-here

# SSH keys
ssh:
  private-key: |
    -----BEGIN OPENSSH PRIVATE KEY-----
    your-private-key-here
    -----END OPENSSH PRIVATE KEY-----

# Environment variables
env:
  github-token: ghp_xxxxxxxxxxxxxxxxxxxx
  aws-access-key: AKIAXXXXXXXXXXXXXXXX

# User-specific secrets
user:
  password: secure-password-here
  gpg-key: |
    -----BEGIN PGP PRIVATE KEY BLOCK-----
    your-gpg-key-here
    -----END PGP PRIVATE KEY BLOCK-----
