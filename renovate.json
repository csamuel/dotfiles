{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":pinAllExceptPeerDependencies",
    ":rebaseStalePrs",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "labels": ["renovate"],
  "lockFileMaintenance": {
    "enabled": true,
    "description": "Every Monday at 2am (CT)",
    "schedule": ["* 2 * * 1"],
    "timezone": "America/Chicago"
  },
  "nix": {
    "enabled": true
  }
}
